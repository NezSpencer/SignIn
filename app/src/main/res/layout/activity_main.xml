<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context="com.nezspencer.signin.MainActivity">

   <ImageView
           android:id="@+id/iv_logo"
           android:adjustViewBounds="true"
           android:src="@drawable/prev1"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_title_text"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:text="@string/welcome_text"
            android:textStyle="bold"
            android:textColor="?attr/colorAccent"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_referral"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/inter_block_margin"
            android:layout_below="@+id/tv_title_text"
            android:textColorHint="@color/text_hint_color"
            android:hint="@string/referral_hint"
            android:layout_marginBottom="@dimen/inter_block_margin"
            android:layout_height="wrap_content">

        <EditText android:layout_width="match_parent"
                  android:id="@+id/et_member_id"
                  android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                  android:drawableStart="@drawable/ic_credit_card_black_24dp"
                  android:inputType="text"
                  android:minHeight="60dp"
                  android:drawablePadding="@dimen/inter_view_margin"
                  android:textColorHint="@color/text_hint_color"
                  android:hint="@string/referral_hint"
                  android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/til_name"
            android:layout_marginBottom="@dimen/inter_view_margin"
            android:layout_below="@+id/til_referral"
            android:textColorHint="@color/text_hint_color"
            android:hint="@string/name_hint"
            android:layout_height="wrap_content">

        <EditText android:layout_width="match_parent"
                  android:id="@+id/et_member_name"
                  android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                  android:drawableStart="@drawable/ic_person_outline_black_24dp"
                  android:inputType="text"
                  android:minHeight="60dp"
                  android:drawablePadding="@dimen/inter_view_margin"
                  android:textColorHint="@color/text_hint_color"
                  android:hint="@string/name_hint"
                  android:layout_height="wrap_content"/>


    </android.support.design.widget.TextInputLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/linear_dob"
                  android:layout_below="@+id/til_name"
                  android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/inter_view_margin"
                android:layout_below="@+id/til_referral"
                android:textColorHint="@color/text_hint_color"
                android:hint="@string/dob_hint"
                android:layout_marginEnd="@dimen/inter_view_margin"
                android:layout_marginRight="@dimen/inter_view_margin"
                android:layout_height="wrap_content">

            <EditText android:layout_width="match_parent"
                      android:id="@+id/et_member_dob"
                      android:drawableLeft="@drawable/ic_date_range_black_24dp"
                      android:drawableStart="@drawable/ic_date_range_black_24dp"
                      android:inputType="text"
                      android:minHeight="60dp"
                      android:drawablePadding="@dimen/inter_view_margin"
                      android:textColorHint="@color/text_hint_color"
                      android:hint="@string/dob_hint"
                      android:layout_height="wrap_content"/>


        </android.support.design.widget.TextInputLayout>

        <RelativeLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

            <TextView
                    android:textSize="20sp"
                    android:textColor="@color/text_hint_color"
                    android:text="Gender"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_gender"
                    android:minHeight="60dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sb_gender"
                    android:layout_toEndOf="@+id/tv_gender"
                    android:layout_toRightOf="@+id/tv_gender"
                    android:gravity="center_vertical"
                    android:minHeight="60dp"
                    app:kswThumbHeight="30dp"
                    app:kswThumbWidth="30dp"
                    app:kswThumbColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>


    </LinearLayout>







</RelativeLayout>
